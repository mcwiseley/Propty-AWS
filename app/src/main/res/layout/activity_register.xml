<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />

    <LinearLayout
        android:id="@+id/register_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="20dp"
        android:orientation="horizontal"


        >

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="First Name"
            android:id="@+id/first_name_textview"
            android:textColor="#000000"
            android:layout_marginStart="16dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/fname"
            android:hint="First Name"
            android:textColor="#000000"
            android:layout_marginEnd="16dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_linear1"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="Last Name"
            android:textColor="#000000"
            android:id="@+id/last_name_textview"
            android:layout_marginStart="16dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/lname"
            android:hint="Last Name"
            android:layout_marginEnd="16dp"
            android:textSize="15dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_linear3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_linear2"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Email"
            android:id="@+id/email_textview"
            android:layout_marginStart="16dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="E-mail"
            android:layout_marginEnd="16dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_linear3"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Realtor ID#"
            android:id="@+id/realtor_id_textview"
            android:layout_marginStart="16dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/realtor_id"
            android:hint="Optional"
            android:layout_marginEnd="16dp"
            android:textSize="15dp"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_linear4"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Username"
            android:id="@+id/username_textview"
            android:layout_marginStart="16dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:id="@+id/uname"
            android:hint="Username"
            android:layout_marginEnd="16dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linear6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_linear5"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Password"
            android:id="@+id/password_textview"
            android:layout_marginStart="16dp"
            android:textSize="15dp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pword"
            android:hint="Password"
            android:layout_marginEnd="16dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/register_linear6"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Register"
            android:id="@+id/register"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:text="Back To Login"
            android:id="@+id/bktologin"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:id="@+id/register_error"
        android:layout_below="@+id/register_buttons"
        android:layout_alignParentRight="true"/>

</RelativeLayout>