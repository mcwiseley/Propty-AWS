<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Propty"
        android:id="@+id/logo"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:id="@+id/email"
        android:layout_below="@+id/logo"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Email"
        android:id="@+id/email_label"
        android:layout_alignTop="@+id/email"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pword"
        android:hint="Password"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Password"
        android:id="@+id/pword_label"
        android:layout_alignBottom="@+id/pword"
        android:layout_alignEnd="@+id/email_label"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:id="@+id/login"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_below="@+id/pword"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/cancel"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/login"
        android:layout_toEndOf="@+id/login"/>

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Register"
        android:id="@+id/registerbtn"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_below="@+id/login"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Forgot Password"
        android:id="@+id/passres"
        android:textSize="13sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/registerbtn"
        android:layout_toEndOf="@+id/registerbtn"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/registerbtn"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sign_in_button"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textColor="#000000"
        android:textSize="13sp"
        android:text="Facebook Login Result"
        android:layout_below="@+id/login_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/loginErrorMsg"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_below="@+id/info"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>