<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e0f5ff">

<!--    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/login_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            />

    <!--</android.support.design.widget.AppBarLayout>-->

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Email"
        android:id="@+id/email_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:layout_alignTop="@id/email_label"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Password"
        android:id="@+id/pword_label"
        android:layout_below="@id/email_label"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/pword"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:layout_alignTop="@id/pword_label"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtns1"
        android:layout_below="@id/pword_label"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Login"
            android:id="@+id/login"
            android:textSize="13sp"
            android:textColor="#000000"
            android:layout_below="@+id/pword"
            android:layout_alignParentStart="true"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:id="@+id/cancel"
            android:textSize="13sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtns2"
        android:layout_below="@id/loginBtns1"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Register"
            android:id="@+id/registerbtn"
            android:textSize="13sp"
            android:textColor="#000000"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Forgot Password"
            android:id="@+id/passres"
            android:textSize="13sp"
            android:textColor="#000000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/altLogin"
        android:layout_below="@id/loginBtns2"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fbLoginResult"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_below="@id/altLogin"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/loginResult"
        android:textColor="#000000"
        android:textSize="13sp"
        android:layout_below="@id/fbLoginResult"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextBtn"
        android:text="Go to Swipe Cards"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"/>

</RelativeLayout>