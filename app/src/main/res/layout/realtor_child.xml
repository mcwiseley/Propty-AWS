<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/realtor_child_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        />

    <TextView
        android:id="@+id/realtor_child_ratingtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:layout_below="@+id/realtor_child_textview"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="0dp"
        android:layout_marginRight="0dp"
        android:textSize="20sp"
        android:text="Rating: "
        />


    <RatingBar
        android:id="@+id/realtor_child_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.25"
        android:rating="1.0"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:layout_alignTop="@+id/realtor_child_ratingtext"
        android:layout_below="@+id/realtor_child_textview"
        android:layout_toEndOf="@+id/realtor_child_ratingtext"
        android:progressTint="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"


        />

    <Button
        android:id="@+id/realtor_child_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:layout_below="@+id/realtor_child_ratingtext"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="@string/realtor_button"
        android:layout_centerHorizontal="true"

        />

    <!-- Separator of group items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/realtor_child_button"
        android:background="@android:drawable/divider_horizontal_bright"
        />
</RelativeLayout>